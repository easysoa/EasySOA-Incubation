<?xml version="1.0"?>
<component name="org.easysoa.registry.doctypes.core.eventlistener.contrib">

  <!-- =============== -->
  <!-- Event listeners -->
  <!-- =============== -->
  
  <extension target="org.nuxeo.ecm.core.event.EventServiceComponent" point="listener">
    <listener name="repositoryManagementListener" class="org.easysoa.registry.RepositoryManagementListener"
    	priority="150"><!-- after dcListener which inits "created" -->
      <event>documentCreated</event>
      <event>documentCreatedByCopy</event>
      <event>documentMoved</event>
      <event>documentModified</event>
      <event>aboutToRemove</event>
    </listener>
    <listener name="serviceMatchingListener" class="org.easysoa.registry.ServiceMatchingListener"
    	priority="150"><!-- after dcListener which inits "created" -->
      <event>documentCreated</event>
      <event>beforeDocumentModification</event>
    </listener>
  </extension>

</component>
